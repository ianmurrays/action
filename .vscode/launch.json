  "version": "0.2.0",
  "configurations": [
    {
      "name": "run",
      "request": "launch",
      "type": "dart",
      // "program": "lib/main.dart",
      "args": [
        "--dart-define-from-file",
        ".secrets.json"
      ],
      "noDebug": true
    },
    {
      "name": "run (debug)",
      "request": "launch",
      "type": "dart",
      // "program": "lib/main.dart",
      "args": [
        "--dart-define-from-file",
        ".secrets.json"
      ]
    },
    {
      "name": "run (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": [
        "--dart-define-from-file",
        ".secrets.json"
      ]
    },
    {
      "name": "run (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": [
        "--dart-define-from-file",
        ".secrets.json"
      ]
    }
  ]
}
